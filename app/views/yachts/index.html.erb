<div id="map" style="width: 70%; height: 400px;"></div>

<% content_for(:after_js) do %>
  <%= javascript_tag do %>
    $(document).ready(function() {
      var handler = Gmaps.build('Google');
      handler.buildMap({ internal: { id: 'map' } }, function() {
        markers = handler.addMarkers(<%= raw @hash.to_json %>);
        handler.bounds.extendWith(markers);
        handler.fitMapToBounds();
        if (markers.length == 0) {
          handler.getMap().setZoom(2);
        } else if (markers.length == 1) {
          handler.getMap().setZoom(14);
        }
      });
    });
  <% end %>
<% end %>


<div class="container">
  <div class="row">
    <% @yachts.each do |yacht| %>
      <div class="col-xs-12 col-md-4">
        <div class="card">
          <p class="carrousel-image"><%= render 'shared/carousel_index', yacht: yacht %></p>
          <p><%= yacht.name %> - <%= yacht.length %>m</p>
          <p><%= yacht.capacity %> people</p>
          <p><%= yacht.price %>$ per day</p>
          <p>Location: <%= yacht.location %></p>
           <button type="submit" class="btn btn-default"><%= link_to 'More details', yacht_path(yacht, location: params[:location], start_date: params[:start_date], end_date: params[:end_date]) %></button>
        </div>
      </div>
    <% end %>
  </div>
</div>

