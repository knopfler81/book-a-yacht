<div class="row">
  <% @yachts.each do |yacht| %>
    <div class="col-xs-12 col-md-3">
      <div class="card">
        <p><%= yacht.name %> - <%= yacht.length %>m</p>
        <p><%= yacht.capacity %> people</p>
        <p><%= yacht.price %>$ per day</p>
        <%= render 'shared/carousel_index', yacht: yacht %>
        <%= link_to 'More details', yacht_path(yacht, location: params[:location], start_date: params[:start_date], end_date: params[:end_date]) %>
      </div>
    </div>
  <% end %>
</div>





