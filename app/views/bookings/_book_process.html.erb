 <% if booking.payment_status == true %>
  <h4 class="booked">You have successfully booked</h4>
<% else %>
  <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModal" id= "pay">
 Validate
</button>
<% end %>

<div>
  <% if booking.payment_status == true %>
    <div class="col-xs-12 col-sm-6">
      <h3> Think to add a review !</h3>
      <%= render 'bookings/new_review', booking: booking, review: review  %>
    </div>
  <% end %>
</div>